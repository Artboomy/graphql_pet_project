{
    "name": "pet_1",
    "private": true,
    "version": "1.0.0",
    "description": "Pet project. See readme.md",
    "main": "index.js",
    "scripts": {
        "postinstall": "npx husky install && npx husky add pre-commit \"npm lint\"",
        "dev": "next dev",
        "typegen": "apollo client:codegen types -c=apollo.config.js --localSchemaFile=schema.graphql --target=typescript --outputFlat --globalTypesFile=\"./types/global.d.ts\"",
        "typegen:watch": "apollo client:codegen types -c=apollo.config.js --localSchemaFile=schema.graphql --target=typescript --outputFlat --globalTypesFile=\"./types/global.d.ts\" --watch",
        "prettify": "npx prettier --write .",
        "lint": "lint-staged"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^14.14.11",
        "@types/react": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "apollo": "^2.31.2",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "stylelint": "^13.8.0",
        "stylelint-config-standard": "^20.0.0",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "@apollo/client": "^3.3.4",
        "@material-ui/core": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "graphql": "^15.4.0",
        "next": "^10.0.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "sass": "^1.30.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(js|jsx|ts|tsx|scss|md|html)": [
            "npx prettier --write",
            "git add"
        ],
        "*.{js,jsx,ts,tsx}": "npx tsc --noEmit && eslint --cache --fix --max-warnings=0",
        "*.scss": "stylelint --fix \"**/*.scss\""
    }
}
